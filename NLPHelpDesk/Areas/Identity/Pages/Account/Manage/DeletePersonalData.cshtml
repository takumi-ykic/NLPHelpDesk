@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "./_Layout.cshtml";
}

<h3 class="text-theme mb-4">@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="alert alert-warning" role="alert" style="border: 1px; background-color: #FFF8E1;">
            <p>
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
        </div>
        <div class="card shadow-lg border-0">
            <div class="card-body p-5" style="background-color: #F5F5F5; border-radius: 0.5rem;">
                <form id="delete-user" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    @if (Model.RequirePassword)
                    {
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-semibold">Please Enter Your Password</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" style="border: 1px;" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    }
                    <div class="text-center">
                        <button class="w-100 btn btn-danger btn-lg" type="submit" style="background-color: #D32F2F; border: none;">
                            Delete Data and Close My Account
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
