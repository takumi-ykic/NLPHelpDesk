@model NLPHelpDesk.Data.Models.Ticket
@using static NLPHelpDesk.Helpers.Constants;

@{
    ViewData[VIEW_DATA_TITLE] = TITLE_DELETE + Model.TicketTitle;
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-theme text-white">
                <h5 class="card-title mb-0">@ViewData[VIEW_DATA_TITLE]</h5>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <h4 class="mb-3">Are you sure you want to delete this ticket?</h4>
                <div class="mb-3">
                    <h5 class="mb-2">Ticket Information</h5>
                    <hr/>
                    <dl class="row">
                        <dt class="col-sm-4">Ticket ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(modle => Model.TicketId)</dd>
                        <dt class="col-sm-4">Ticket Title:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TicketTitle)</dd>
                        <dt class="col-sm-4">Ticket Description:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TicketDescription)</dd>
                    </dl>
                </div>
                <form asp-action="Delete">
                    <div class="d-flex justify-content-end">
                        <a asp-action="Details" class="btn btn-outline-dark me-2" asp-route-ticketId="@Model.TicketId">
                            <i class="bi bi-arrow-left-circle"></i> Back to Detail
                        </a>
                        <input type="hidden" name="ticketId" value="@Model.TicketId"/>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>